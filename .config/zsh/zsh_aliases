
# Auto colorize grep
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Auto colorize ls
alias ls='eza --color=always --header --icons --group-directories-first'
alias ll='eza -l --header --icons --group-directories-first'

alias gg='git log --oneline --graph --all'
alias gs='git status'

alias py='python3'
alias python='python3'
alias pip='pip3'

# Make fzf always use less than half the screen
alias fzf='fzf --height 40%'

# Use 'cfgrepo' as a special git wrapper
alias cfgrepo='/usr/bin/git --git-dir=$HOME/.config/.git --work-tree=$HOME'

alias yt-mp3='yt-dlp -x --audio-format mp3 --audio-quality 0 $1'

alias plz='sudo $(fc -ln -1)'
